<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="300.0" minWidth="400.0"
            xmlns="http://javafx.com/javafx/null"
            fx:controller="com.oskopek.studyguide.controller.SemesterBoxController"
            onDragDropped="#onDragDropped" onDragOver="#onDragOver">
    <top>
        <BorderPane maxHeight="30.0" minHeight="30.0" minWidth="200.0" prefHeight="30.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <right>
                <HBox alignment="CENTER_RIGHT" minHeight="100.0" minWidth="200.0" spacing="5.0"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="removeSemesterButton" mnemonicParsing="false" onAction="#onRemoveSemester"
                                text=" - ">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="5.0" right="5.0"/>
                    </padding>
                </HBox>
            </right>
            <left>
                <TextField fx:id="semesterNameArea" onAction="#onSemesterNameChange" promptText="Semester Name"
                           BorderPane.alignment="CENTER"/>
            </left>
        </BorderPane>
    </top>
    <center>
        <TableView fx:id="semesterTable" minHeight="200.0" minWidth="200.0" BorderPane.alignment="CENTER"
                   onDragDetected="#onDragDetected">
            <columns>
                <TableColumn fx:id="idColumn" editable="false" maxWidth="70.0" minWidth="60.0" prefWidth="70.0"
                             text="%course.id"/>
                <TableColumn fx:id="nameColumn" editable="false" minWidth="100.0" prefWidth="120.0"
                             text="%course.name"/>
                <TableColumn fx:id="creditsColumn" editable="false" maxWidth="70.0" minWidth="70.0" prefWidth="90.0"
                             text="%course.credits"/>
                <TableColumn fx:id="fulfilledColumn" editable="true" maxWidth="20.0" minWidth="20.0" prefWidth="20.0"
                             text="%checkmark"/>
                <TableColumn fx:id="removeColumn" editable="false" maxWidth="20.0" minWidth="20.0" prefWidth="20.0"
                             text="%crossmark"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
