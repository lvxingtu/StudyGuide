<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oskopek.studyguide.controller.SemesterBoxController">
   <top>
      <BorderPane maxHeight="-Infinity" prefHeight="10.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <right>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="removeSemesterButton" mnemonicParsing="false" onAction="#onRemoveSemester" text=" - ">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </HBox>
         </right>
         <left>
            <TextField fx:id="semesterNameArea" onAction="#onSemesterNameChange" promptText="Semester Name" BorderPane.alignment="CENTER" />
         </left>
      </BorderPane>
   </top>
   <center>
      <TableView fx:id="semesterTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" onDragDetected="#onDragDetected"
      onDragDropped="#onDragDropped">
        <columns>
          <TableColumn editable="false" maxWidth="120.0" minWidth="80.0" prefWidth="120.0" text="%semesterBox.id" />
          <TableColumn editable="false" minWidth="80.0" prefWidth="120.0" text="%semesterBox.name" />
            <TableColumn editable="false" maxWidth="90.0" minWidth="70.0" prefWidth="90.0" text="%semesterBox.credits" />
            <TableColumn editable="false" maxWidth="20.0" minWidth="20.0" prefWidth="20.0" text="✓" />
            <TableColumn editable="false" maxWidth="20.0" minWidth="20.0" prefWidth="20.0" text="✗" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
