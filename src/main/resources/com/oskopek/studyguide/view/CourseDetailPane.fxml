<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="2" minHeight="295.0" minWidth="211.0"
          xmlns="http://javafx.com/javafx/8" fx:controller="com.oskopek.studyguide.controller.CourseDetailController">
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="%studyPane.courseDetails" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"
           GridPane.halignment="CENTER">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Label text="%course.id" GridPane.rowIndex="1">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
    <TextField fx:id="idField" disable="true" text="..." GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
            <Font size="12.0"/>
        </font>
    </TextField>
    <Label text="%course.name" GridPane.rowIndex="2">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
    <TextField fx:id="nameField" disable="true" text="..." GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font size="12.0"/>
        </font>
    </TextField>
    <Label text="%course.credits" GridPane.rowIndex="3">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
    <TextField fx:id="creditsField" disable="true" text="..." GridPane.columnIndex="1" GridPane.rowIndex="3">
        <font>
            <Font size="12.0"/>
        </font>
    </TextField>
    <Label text="%course.teacherNames" GridPane.rowIndex="4">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
    <TextField fx:id="teacherNamesField" disable="true" text="..." GridPane.columnIndex="1" GridPane.rowIndex="4">
        <font>
            <Font size="12.0"/>
        </font>
    </TextField>
    <Label text="%course.prerequisites" GridPane.rowIndex="5">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
    <TextField fx:id="prerequisitesField" disable="true" text="..." GridPane.columnIndex="1" GridPane.rowIndex="5">
        <font>
            <Font size="12.0"/>
        </font>
    </TextField>
    <Label text="%course.corequisites" GridPane.rowIndex="6">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
    <TextField fx:id="corequisitesField" disable="true" text="..." GridPane.columnIndex="1" GridPane.rowIndex="6">
        <font>
            <Font size="12.0"/>
        </font>
    </TextField>
</GridPane>
