<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<BorderPane fx:id="semesterPane" prefHeight="300.0" prefWidth="400.0" BorderPane.alignment="TOP_LEFT"
            xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oskopek.studyguide.controller.SemesterController">
    <top>
        <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="35.0" prefWidth="200.0" spacing="5.0"
              BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <children>
                <Button fx:id="addSemesterButton" mnemonicParsing="false" onAction="#onAddSemester"
                        text="%semesterPane.addSemester"/>
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" BorderPane.alignment="TOP_LEFT">
            <content>
                <TilePane fx:id="tilePane" alignment="TOP_CENTER" hgap="8.0" prefColumns="2" prefRows="3"
                          tileAlignment="TOP_CENTER" vgap="8.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </TilePane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
