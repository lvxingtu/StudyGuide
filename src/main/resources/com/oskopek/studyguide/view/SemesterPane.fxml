<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="semesterPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"
            xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oskopek.studyguide.controller.SemesterController">
    <top>
        <HBox minHeight="-Infinity" prefHeight="35.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <children>
                <Button fx:id="addSemesterButton" mnemonicParsing="false" onAction="#onAddSemester"
                        text="%semesterPane.addSemester"/>
            </children>
        </HBox>
    </top>
    <center>
        <TilePane fx:id="tilePane" alignment="CENTER" prefColumns="2" prefHeight="200.0" prefRows="3" prefWidth="200.0"
                  BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </TilePane>
    </center>
</BorderPane>
